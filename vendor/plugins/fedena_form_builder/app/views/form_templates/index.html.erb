
<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('form_builder_text') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('form_templates') %></div>

  <div id="inner-tab-menu">
    <ul>      
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('create_form_template')}", new_form_template_path%></li>
    </ul>
  </div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <div id="flash-msg">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div id="form_templates_list">
    <%= render :partial => 'form_templates_list' %>
  </div>

</div>

<script>
  if(j('.pagination').length == 0){
    j('table').addClass('narrow_border')
  }
</script>
