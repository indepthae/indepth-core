
<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('form_builder_text') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('form_template') %></div>

  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('edit')}", edit_form_template_path(@form_template) %></li>      
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('view_published_forms')}", forms_path(:id=>@form_template)%></li>
    </ul>
  </div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <% breadcrumb :form_templates_preview, @form_template %>
    <%= render_breadcrumbs  %>
  </div>
  <% form_for @form_template do |template| %>
    <div class="form_template_name">
      <%#= template.label @form_template.name %>
      <label for="form_template_<%= @form_template.name %>"><%= @form_template.name %></label>      
    </div>
    <% @fields.each do |field|  %>
      <%= render_field(field) %>
    <% end %>    
  <% end %>


</div>
<script>
  j('#page-yield').find('input,select,textarea').each(function(a,b){
    j(b).attr('disabled',true);
  });
</script>