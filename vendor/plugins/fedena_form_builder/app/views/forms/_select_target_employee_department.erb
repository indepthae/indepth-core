
<div class="label-field-pair-form">
  <label for="select_department"><%= t('select_department') %></label>
  <div class="text-input-bg">
    <% departments = @departments %>
    <%= select :select_department, :department, departments.map { |s| [s.name, s.id] },
      {:prompt => "#{t('select_department')}"},
      {:onChange => "#{remote_function(:url => to_target_employees_forms_path, :with => "'dept_id='+value",
      :before => "Element.show('loader2')",
      :success => "Element.hide('loader2')")}"} %>
  </div>
</div>

