
<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('instant_fees_text') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('instant_fee_management') %></div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="message"></div>

  <div class="box">

    <div class="fee-link">

      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('manage_instant_fees')}", :controller => 'instant_fees',:action => 'manage_fees' %>
        </div>
        <div class="link-descr"> <%= "#{t('manage_instant_fees')}" %></div>
      </div>

      <div class="link-box">
        <div class="link-heading">
          <%= link_to "#{t('pay_fees')}",  :controller => 'instant_fees',:action => 'new_instant_fees' %>
        </div>
        <div class="link-descr"> <%= t('pay_instant_fees') %></div>
      </div>
    </div>
    <div class="link-box">
      <div class="link-heading">
        <%= link_to "#{t('transactions')}", :controller => 'instant_fees',:action => 'show_instant_fee_transactions' %>
      </div>
      <div class="link-descr"> <%= "#{t('transactions')}" %></div>
    </div>
    <div id="modal-box" style="display:none;"></div>
<%#= @a %>
  </div>
</div>
