<div id="register">
  <div class="header">
    <div class="prev">
      <%= link_to_remote '◄',:url => {:action => 'load_instant_fee', :fee => @prev_instant_fee.id}%>
    </div>
    <div class="month">
      <%#= @student.full_name %>
    </div>
    <div class="next">
      <%= link_to_remote '►',:url => {:action => 'load_instant_fee',:fee => @next_instant_fee.id}%>
    </div>
    <div class="extender"></div>
  </div>
</div>
<div class="extender"></div>

  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= t('sl_no') %> </td>
      <td><%= t('particulars') %></td>
      <td><%= t('amount') %> </td>
      <td><%= "#{t('discount')} (%)" %> </td>
      <td><%= t('total_amount') %> </td>
    </tr>
    <tr class="tr-blank"></tr>
    <% i = 0 %>
    <% unless @instant_fee_details.nil? %>
      <% @instant_fee_details.each do |fee| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+=1 %></td>
          <td class="col-2"><%= shorten_string(fee.name,20) %></td>
          <td class="col-3"><div class="text-input-bg1"><%= precision_label(fee.amount) %></div>
          </td>
          <td class="col-4"><div class="text-input-bg1"><%= precision_label(fee.discount) %></div></td>
          <td class="col-5"><div class="text-input-bg1"><%= precision_labelfee.net_amount) %></div></td>
        </tr>
      <% end %>
    <%end%>
    <tr class="tr-blank"></tr>
    <tr class="tr-blank"></tr>
    <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
      <td class="col-1"></td>
      <td class="col-2" colspan="3"><%= t('amount_to_pay') %>:</td>
      <td id="total" ><%= precision_label(@instant_fee.amount)%></td>
    </tr>
  </table>
<%end%>


