

<% string = @to_users.inject('') { |arr, u| arr + u.user_id.to_s + ',' }.chomp(',') %>
<% add = "<span>#{t('add')}</span>" %>
<div class="label-field-pair">
  <label for="select_people"><%= t('select_people') %></label>
  <div class ="scrolable" >
    <div class="scroll-inside2">
      <div class="hover"><%= link_to "#{t('select_all')}  <span>#{t('add')}</span>", '#', :onClick => "add_all_member('#{string}')", :class=> 'all' %>
       
      </div>
      <% @to_users.each do |t| %>
        <div class="hover"><%= link_to shorten_string(t.full_name,18)+add  , '#', :onClick => "add_member(#{t.user_id})", :class=>'individual',
    :before => "Element.show('loader')",
      :success => "Element.hide('loader')" %>
         
        </div>
      <% end %>
    </div>
  </div>
</div>



