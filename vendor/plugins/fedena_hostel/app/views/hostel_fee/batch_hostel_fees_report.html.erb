<% content_for :head do %>
  <% if (rtl?) %>
    <%= stylesheet_link_tag "rtl/gray_table_design" %>
    <%= stylesheet_link_tag "rtl/finance/monthly_report" %>
  <% else %>
    <%= stylesheet_link_tag "gray_table_design" %>
    <%= stylesheet_link_tag "finance/monthly_report" %>
  <% end %>
<% end %>

<div id="content-header">
    <%= show_header_icon %>
    <h1><%= "#{t('finance_transactions')}"%></h1>
    <div class='header-sep'>|</div>
    <% batch_or_student_wise = @batch.present?? @batch.full_name : "#{t('student_text')} #{t('wise')} #{t('fee_collection')}" %>
    <div class='sub-header'><%=batch_or_student_wise%> <%= "#{t('fees_report')}"%></div>
</div>

<div id="page-yield">
    <div class="bread_crumb">        
        <% _params = [@start_date, @end_date] %>

        <% if @accounts_enabled %>
          <% _params += [@account_id] %>
          <% additional_params = {:fee_account_id => @account_id} %>
        <% else %>
          <% _params += [] %>
          <% additional_params = {} %>
        <% end %>

        <% if @batch.present? %>
          <% breadcrumb :hostel_fee_batch_hostel_fees_report, [@batch, @fee_collection,_params]%>
        <% else %>
          <% breadcrumb :hostel_fee_student_wise_hostel_fees_report, [@fee_collection, _params]%>
        <% end %>
        <%= render_breadcrumbs  %>
    </div>

    <div id="date_filter" class="date_box">
        <%= render :partial => "finance/filter_dates", :locals => {:additional_params => additional_params} %>
    </div>

    <div id="fee_report_div">
        <%= render :partial => "batch_hostel_fees_report" %>
    </div>
</div>
