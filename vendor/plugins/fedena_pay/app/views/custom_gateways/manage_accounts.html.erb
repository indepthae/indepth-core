<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('custom_gateways') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('edit_gateway') %></div>
</div>
<div id="page-yield">
    <div class="bread_crumb">
        <% breadcrumb :custom_gateways_manage_accounts, @gateway %>
        <%= render_breadcrumbs  %>
    </div>
  </div>
  <div id="flash_box"></div>
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p>
  <% end %>
  <% unless flash.now[:error].nil? %>
      <div id="errorExplanation" class="errorExplanation"><p><%= flash[:error] %></p></div>
  <% end %>
  <div id="batch">
    <div class="label-field-pair"><label><%= t('cg_financial_year') %> : </label>

      <div class="text-input-bg">
        <%= select("financial_year", :year_id, @financial_years.map{ |c| [c.name, c.id] }.push(["Default",0]),
                   {:selected => (@active_financial_year.present? ? @active_financial_year.id : 0)},
                   {:onChange => "#{remote_function(:url => {:action => "change_financial_year"},
                                                    :with => "'financial_year_id='+value+'&custom_gateway_id=#{@gateway.id}'",
                                                    :before => "Element.show('loader')",
                                                    :success => "Element.hide('loader')")}"
                   }) %>
      </div>
      <div class="loader_div">
        <%= image_tag("loader.gif",
                      :align => "absmiddle",
                      :border => 0,
                      :id => "loader",
                      :style => "display: none;") %>
      </div>
    </div>
  </div>

      <div id="account-details">
        <%= render :partial=>"account_details" %>
      </div>

</div>