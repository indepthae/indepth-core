<% if rtl? %>
  <%= stylesheet_link_tag 'rtl/module_dashboard' %>
<% else %>
  <%= stylesheet_link_tag 'module_dashboard' %>
<% end %>

<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('finance_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('settings') %></div>
</div>

<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"><%= flash[:notice] %></p>
    <% end %>

    <div class="box">
        <div class="link-box">
            <div class="link-heading">
                <%= link_to "#{t('fee_general_settings')}", :action => "fee_general_settings" %>
            </div>
            <div class="link-descr">
                <%= t('fee_general_settings_descr') %>
            </div>
        </div>

        <div class="link-box">
            <div class="link-heading">
                <%= link_to "#{t('fees_receipt_printer_settings')}", :action=>'receipt_print_settings' %>
            </div>
            <div class="link-descr">
                <%= "#{t('fees_receipt_printer_descr')}"  %>
            </div>
        </div>

        <div class="link-box">
            <div class="link-heading">
                <%= link_to "#{t('pdf_receipt_settings')}", :action=>'receipt_pdf_settings' %>
            </div>
            <div class="link-descr">
                <%= "#{t('pdf_receipt_settings_descr')}" %>
            </div>
        </div>

        <% if @config[:multi_receipt_number_set_enabled].to_i == 1 %>
          <div class="link-box">
              <div class="link-heading">
                  <%= link_to "#{t('manage_receipt_sets')}", receipt_sets_path %>
              </div>
              <div class="link-descr">
                  <%= "#{t('manage_receipt_sets_desc')}" %>
              </div>
          </div>        
        <% end %>

        <% if @config[:multi_receipt_template_enabled].to_i == 1 %>
          <div class="link-box">
              <div class="link-heading">
                  <%= link_to "#{t('manage_receipt_templates')}", receipt_templates_path %>
              </div>
              <div class="link-descr">
                  <%= "#{t('manage_receipt_templates_desc')}" %>
              </div>
          </div>        
        <% end %>

        <% if @config[:multi_fee_account_enabled].to_i == 1 %>
          <div class="link-box">
              <div class="link-heading">
                  <%= link_to "#{t('manage_fee_accounts')}", fee_accounts_path %>
              </div>
              <div class="link-descr">
                  <%= "#{t('manage_fee_accounts_desc')}" %>
              </div>
          </div>        
        <% end %>

	<div class="link-box">
      		<div class="link-heading">
        		<%= link_to "#{t('financial_years_text')}", financial_years_path %>
      		</div>
      		<div class="link-descr">
        		<%= "#{t('financial_year_description')}" %>
      		</div>
    	</div>

        <div class="link-box">
            <div class="link-heading"><%= link_to "#{t('single_statement_header_settings')}" ,:controller=>"finance_settings",
                                          :action=>'single_statement_header_settings' %></div>
            <div class="link-descr"><%= "#{t('single_statement_header_settings_descr')}"  %></div>
        </div>
        



    </div>
</div>
