<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('fees_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('fees_receipt_settings') %></div>
</div>

<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>

    <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
    <div class="box">
        <div class="link-box">
            <div class="link-heading"><%= link_to "#{t('fees_receipt_printer_settings')}" ,:controller=>"finance",:action=>'fees_receipt_settings' %></div>
            <div class="link-descr"><%= "#{t('fees_receipt_printer_descr')}"  %></div>
        </div>
        <div class="link-box">
            <div class="link-heading"><%= link_to "#{t('pdf_receipt_settings')}" ,:controller=>"finance",:action=>'pdf_receipt_settings' %></div>
            <div class="link-descr"><%= "#{t('pdf_receipt_settings_descr')}"  %></div>
        </div>
        <div class="link-box">
            <div class="link-heading"><%= link_to "#{t('single_statement_header_settings')}" ,:controller=>"finance",:action=>'single_statement_header_settings' %></div>
            <div class="link-descr"><%= "#{t('single_statement_header_settings_descr')}"  %></div>
        </div>

    </div>
</div>
