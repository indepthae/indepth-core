</div>
<div id="page-yield">
  <div class="bread_crumb">
    <% breadcrumb :student_profile, @student %>
    <%= render_breadcrumbs  %>
  </div>

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <div id="student_profile_heading">

    <div id="profile_picture_display">
      <% if @student.photo.file? %>
        <%= image_tag @student.photo.url(:original, false) %>
      <% else %>
        <%= image_tag "master_student/profile/default_student.png" %>
      <% end %>
    </div>

    <div id ="student_main_info">
      <h3> <%= @student.full_name %>  </h3>
      <h4> <%= t('course_text') %> : <%= @student.batch.course.full_name %> </h4>
      <h4> <%= t('batch') %> : <%= @student.batch.name %> </h4>
      <h4> <%= t('adm_no') %> : <%= @student.admission_no %> </h4>
      <% if roll_number_enabled? %>
        <h4> <%= t('roll_no') %> : <%= @student.roll_number.present? ? @student.roll_number : "-" %> </h4>
      <% end %>
    </div>

    <div class="extender"> </div>

  </div>

  <div id="new_profile_info_top">

    <table width="700">
      <tr class="odd left"><td><%= t('admission_date') %></td><td class="right"><%= format_date(@student.admission_date,:format=>:long) unless @student.admission_date.nil? %></td></tr>
      <tr class="even left"><td><%= t('date_of_birth') %></td><td class="right"><%= format_date(@student.date_of_birth,:format=>:long) unless @student.date_of_birth.nil? %></td></tr>
      <tr class="odd left"><td><%= t('blood_group') %></td><td class="right"><%= @student.blood_group %></td></tr>
      <tr class="even left"><td><%= t('gender') %></td><td class="right"><%= t("#{@student.gender_as_text.downcase}") %></td></tr>

      <tr class="odd left"><td><%= t('nationality') %></td><td class="right"><%= @student.nationality.full_name unless @student.nationality_id.nil? %></td></tr>
      <tr class="even left"><td><%= t('mother_tongue') %></td><td class="right"><%= @student.language %></td></tr>

      <tr class="odd left"><td><%= t('category') %></td><td class="right"><%= @student.student_category.name unless @student.student_category.nil? %></td></tr>
      <tr class="even left"><td><%= t('religion') %></td><td class="right"><%= @student.religion %></td></tr>
      <tr class="odd left"><td><%= t('familyid') %></td><td class="right"><%= @student.familyid %></td></tr>
      <tr class="even left"><td><%= t('address') %></td><td class="right"><%= @student.address_line1%><%= ', ' unless @student.address_line1.blank? %><%=  @student.address_line2 %></td></tr>
<%#*<tr class="even left"><td></td><td class="right"><%= @student.address_line2%>
      <tr class="odd left"><td><%= t('city') %></td><td class="right"><%= @student.city %></td></tr>
      <tr class="even left"><td><%= t('state') %></td><td class="right"><%= @student.state %></td></tr>
      <tr class="odd left"><td><%= t('zip') %></td><td class="right"><%= @student.pin_code %></td></tr>
      <tr class="even left"><td><%= t('country') %></td><td class="right"><%= @student.country.full_name unless @student.country_id.nil? %></td></tr>
      <tr class="odd left"><td><%= t('birth_place') %></td><td class="right"><%= @student.birth_place %></td></tr>
      <tr class="even left"><td><%= t('phone') %></td><td class="right"><%= @student.phone1 %></td></tr>
      <tr class="odd left"><td><%= t('mobile') %></td><td class="right"><%= @student.phone2 %></td></tr>
      <tr class="even left"><td><%= t('email') %></td><td class="right"><%= @student.email %></td></tr>
      <% unless @assigned_employees.empty? %>
        <tr class="even left"><td><%= t('group_tutor') %>(s) :</td><td class="right">
            <% @tutors = @assigned_employees.map{|e| e.full_name} %>
            <%= @tutors.join(", ") %>
          </td></tr>
      <% end  %>
      <% FedenaPlugin.deliver_registered_hook(:student_profile).each do |mod| %>
        <%= render :partial=>mod.camelize.constantize.send("student_profile_hook"),:locals=>{:student=>@student} %>
      <% end %>
      <% if @sms_setting.application_sms_active %>
        <tr class="even left"><td><%= t('sms_alerts') %></td><td class="right"><%= @student.is_sms_enabled?? "Enabled":"Disabled" %></td></tr>
      <% end  %>
      <tr class="odd left"><td><%= t('email_alerts') %></td><td class="right"><%= @student.is_email_enabled?? "Enabled":"Disabled" %></td></tr>
      <tr class="even left"><td><%= t('biometric_id') %></td><td class="right"><%= @biometric_id %></td></tr>
      <% unless (@immediate_contact.nil? or @immediate_contact.user_id.nil?)%>
        <tr class="odd left"><td></td><td class="right"><%= t('immediate_contact') %></td></tr>
        <%unless (@current_user.employee? and !@current_user.admin?) and @current_user.can_view_results?%>
          <tr class="even left"><td><%= t('name_text') %></td><td class="right"><%= link_to @immediate_contact.full_name, :controller => "student", :action => "guardians", :id => @student.id %></td></tr>
        <%else%>
          <tr class="even left"><td><%= t('name_text') %></td><td class="right"><%= @immediate_contact.full_name%></td></tr>
        <%end%>
        <% if @immediate_contact and @immediate_contact.mobile_phone.present? %>
          <tr class="odd left"><td><%= t('contact_number') %></td><td class="right"><%=  @immediate_contact.mobile_phone %></td></tr>
        <% end %>
        <tr class="odd left"><td><%= t('username') %></td><td class="right"><%=  @immediate_contact.user.username %></td></tr>
        <%if permitted_to? :admission3_1,:student %>
          <tr class="even left"><td></td><td class="right"><%= link_to "#{t('change_contact')}", :controller => 'student', :action => 'admission3_1', :id => @student.id %></td></tr>
        <% end %>
      <%else%>
        <% if permitted_to? :add_guardian,:student %>
          <span>
            <tr class="odd left"><td></td><td class="right"><%= t('no_guardian') %> (<%= link_to "#{t('add_guardian')}",:controller => 'student',:action => 'add_guardian', :id => @student.id %><%if @student.guardians.present?%>/<%= link_to "#{t('choose_from_existing')}",:controller => 'student',:action => 'admission3_1', :id => @student.id %><%end%>)</td></tr>
          </span>
        <%else%>
          <tr class="odd left"><td></td><td class="right"><%= t('no_guardian') %></td></tr>
        <%end%>
      <%end%>
      <% unless  @additional_details.empty? %>

        <% @additional_details.each do |detail| %>
          <% p =cycle('2',' ') %>
          <tr class="odd left">
            <td><%= detail.student_additional_field.name %></td>
            <td class="right">
              <%= detail.additional_info.gsub(/\n/, '<br>') unless detail.nil? %>
            <% end %>
          </td>
        </tr>
        <tr class="even left">
          <td></td>
          <td class="right">

            <% if permitted_to? :edit_admission4,:student %>
              <% unless @additional_details.blank? %>
                <span> (<%= link_to "#{t('edit_additional_details')}", :controller => 'student', :action => 'admission4', :id => @student.id %>)</span>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% else %>
        <% unless @additional_fields_count == 0 %>
          <% if permitted_to? :admission4,:student %>
            <tr class="even left">
              <td></td>
              <td class="right">
                <span> (<%= link_to "#{t('add_additional_details')}", :controller => 'student', :action => 'admission4', :id => @student.id %>)</span>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
      <% unless @previous_data.nil? %>
        <tr class="odd left"><td></td><td class="right"><%= t('previous_details') %></td></tr>
        <%unless (@current_user.employee? and !@current_user.admin?) and @current_user.can_view_results?%>
          <tr class="even left"><td><%= t('previous_institution') %></td><td class="right"><%= link_to @previous_data.institution,:action=>'show_previous_details', :id => @student.id %></td></tr>
        <%else%>
          <tr class="even left"><td><%= t('previous_institution') %></td><td class="right"><%= @previous_data.institution%></td></tr>
        <%end%>
      <%else%>
        <% if permitted_to? :previous_data,:student %>
          <tr class="odd left"><td></td><td class="right"><%= t('no_previous_data') %> (<%= link_to "#{t('add_previous_data')}", :controller => 'student', :action => 'previous_data_from_profile', :id => @student.id %>)</td></tr>
        <% else %>
          <tr class="odd left"><td></td><td class="right"><%= t('no_previous_data') %></td></tr>
        <% end %>
      <% end %>
    </table>
    <% if @current_user.admin? %>
      <div class="buttons">
        <%= link_to " ► #{t('edit_text')}",
          { :controller => "student", :action => "edit", :id => @student.id },:class => "user_button"%>

        <%= link_to " ► #{t('pdf_report')}",
          {:controller => "student", :action => "profile_pdf", :id => @student.id},:target => '_blank', :class=> 'user_button' %>
      </div>
    <% elsif permitted_to? :edit, :student %>
      <div class="buttons">
        <%= link_to " ► #{t('edit_text')}",
          { :controller => "student", :action => "edit", :id => @student.id },:class => "user_button"%>

        <%= link_to " ► #{t('pdf_report')}",
          {:controller => "student", :action => "profile_pdf", :id => @student.id},:target => '_blank', :class=> 'user_button' %>
      </div>
    <%elsif permitted_to? :profile_pdf,:student%>
      <div class="buttons">
        <%= link_to " ► #{t('pdf_report')}",
          {:controller => "student", :action => "profile_pdf", :id => @student.id},:target => '_blank', :class=> 'user_button' %>
      </div>
    <% end %>

  </div>
</div>
<script>
    <%if is_permited%>
      j('#drop_header').show();
    <%end%>
</script>