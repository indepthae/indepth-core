<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('transport_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('manage_drivers_and_attendant') %></div>
    <% if permitted_to? :new , :transport_employees %>
      <div id="inner-tab-menu">
          <ul>
              <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('add_employees')}", new_transport_employee_path %></li>
          </ul>
      </div>
    <% end %>
</div>
<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <div id ="description"><%= t('manage_drivers_and_attendant_description') %></div>
    <div id ="addl_details_list">
        <%= render :partial => 'list_employees' %>
    </div>
</div>
