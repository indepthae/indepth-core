<div class="list_table_div">
    <div class="main_head_label">
        <b id="fees_report_title">
            <%= t('transactions') %>
            <% if @accounts_enabled %>
              <%= "#{t('for')}: #{@account_name}" %>
              <% url_params = {:fee_account_id => @account_id} %>
            <% else %>
              <% url_params = {} %>
            <% end %>
        </b>
        <div class="date_align right">
            <label class="date_tag"><%= params[:date_tag] %></label>&nbsp;
            <%= format_date(@start_date) %> &nbsp; 
            <label class="to_date"><%= t('to') %></label> &nbsp; 
            <%= format_date(@end_date)%> 
            <span id="show_date" class="themed_hover_text" >
                <%= t('change_date') %>
                <!-- 
                < %=link_to_remote t('change_date'),:url => {:controller => "transport_fee",
                :action =>"show_date_filter",:target_action=>@target_action,:id=>params[:id],
                :dep_id=>params[:dep_id],:type=>params[:type],:batch_id=>params[:batch_id],
                :date_tag=>params[:date_tag],:start_date=>@start_date,:end_date=>@end_date}%>-->
            </span>
        </div>
    </div>

    <% unless @transactions.empty? %>
      <table class="gray_table_list" align="center" width="100%" cellpadding="0" cellspacing="0">
          <tr class="main_head">
              <% unless params[:type] == 'student' %>
                <td><%= t('employee_name') %></td>
              <% else %>
                <td> <%= t('student_name') %></td>
              <% end %>
              <td class="set_border_right"><%= t('amount')%> (<%= currency %>)</td>
              <td class="set_border_right"><%= t('receipt_no') %></td>
              <td class="set_border_right"><%= t('date_text')%></td>
              <td class="set_border_right"> <%= t('payment_mode') %> </td>
              <td class="set_border_right"><%= t('payment_notes') %></td>
          </tr>
          <% @transactions.each do |t| %>
            <tr class="row-b">
                <% if params[:type] == 'student' %>
                  <td>
                      <%= "#{t.transport_student_with_out_batch_name.full_name}(#{t.transport_student_with_out_batch_name.admission_no})"%>
                  </td>
                <% else %>
                  <td><%= "#{t.transport_employee.full_name}(#{t.transport_employee.employee_number})" %></td>
                <% end %>
                <td class="set_border_right" align="right"><%= precision_label t.amount %> </td>
                <td class="set_border_right"><%= t.receipt_number %></td>
                <td class="set_border_right"><%= format_date(t.created_at,:format=>:short_date) %> </td>
                <td class="set_border_right"><%= t.payment_mode %></td>
                <td class="set_border_right"><%= t.payment_note %></td>
            </tr>
          <% end %>
      </table>

      <%= will_paginate @transactions, :params => {:id => params[:id], :date_tag => params[:date_tag],
        :type => params[:type], :batch_id => params[:batch_id], :dep_id => params[:dep_id],
        :start_date => @start_date, :end_date => @end_date}.merge(url_params), 
        :renderer => 'RemoteLinkRenderer'  %>

      <div class="total_amount_div">
          <label><%= t('net_income') %></label>
          <label class="amount_label"><%=precision_label(@grand_total)%></label>
      </div>
      <div class="seprater_div_bottom">
          <div id="inner-tab-menu">
              <ul>
                  <li class='themed_bg themed-dark-hover-background'>
                      <%= link_to "#{t('csv_report')}", {:controller => "transport_fee", 
                        :action => "employee_transport_fees_report_csv",:id => params[:id], 
                        :batch_id => params[:batch_id], :dep_id => params[:dep_id], :type => params[:type], 
                        :start_date => @start_date, :end_date => @end_date}.merge(url_params) %>
                  </li>
              </ul>
          </div>
      </div>
    <% else %>
      <div class="no_entries"><%= t('no_transactions_present') %></div>
    <% end %>
</div>

<script>
  
  j('.date_box').hide();
  
  j("#show_date").click(function () {
      j(".date_box").show();
      j("#show_date").hide();
  });
  
  j("#hide_date_filter").click(function () {
      j(".date_box").hide();
      j("#show_date").show();
  });
  
  if (j('#hide_date_filter').is(":visible")) {
      j('#show_date').hide();
  }
  
</script>
