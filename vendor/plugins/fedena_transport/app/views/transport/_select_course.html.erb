<div class="label-field-pair">
    <label for="course"><%= t('course') %></label>
    <div class="text-input-bg">
        <%= select_tag :course_id, options_for_select([["#{t('select_a_course')}",""]] + @courses.map { |c| [c.course_name, c.id] }), 
          {:onchange =>  "#{remote_function(:url => {:action => "show_batches"},
          :with => "'course_id='+value",
          :before => "Element.show('loader2');",
          :success => "Element.hide('loader2')")}"} %>
        <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader2",
          :style =>"display: none;" ) %>
    </div>
</div>
<div id="list_batches">
    <%= render :partial => 'select_batch' %>
</div>