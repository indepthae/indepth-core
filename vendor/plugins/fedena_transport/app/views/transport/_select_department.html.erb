<div class="label-field-pair dept_name">
    <label for="department"><%= t('department') %></label>
    <div class="text-input-bg">
        <%= select_tag :employee_department_id, options_for_select([["#{t('select_the_department')}","no"]] + @departments.map { |c| [c.name, c.id] }), 
          {:onchange =>  "#{remote_function(:url => {:action => "show_passengers"},
          :with => "'search[employee_department_id]='+value+'&passenger='+j('[name=passenger]:checked').val()",
          :before => "Element.show('loader2');",
          :success => "Element.hide('loader2')")}"} %>
        <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader2",
          :style =>"display: none;" ) %>
    </div>
</div>
<%= link_to_remote "#{t('advanced_search_text')}", :url => {:action => "advanced_search", :passenger => "employee"}, :method => :get, :html => {:id => 'advanced_search'} %>