<div id="pdf-header">
    <div class="logo">
        <%= wicked_pdf_image_tag current_school_detail.logo,:s3=>true,:style=>:original,:timestamp=>false %>
    </div>
    <div class="header-content" style='text-align:<%= @config[:pdf_receipt_halignment].present? ? "#{@config[:pdf_receipt_halignment]}" : "left" %>;'>
        <p><%=Configuration.get_config_value('InstitutionName'); %></p>
        <p class="institution_address"><%=Configuration.get_config_value('InstitutionAddress'); %></p>
    </div>

</div>   
<div class="top">
    <hr class="hor_line"/>
    <span class="title"><%= "#{t('library_fine_receipt')}" %></span>
    <span class="receipt_no"><%= t('receipt_no') %>: <%= @ft.receipt_number %></span>
    <span class="date">Date: <%=format_date(@ft.transaction_date,:format=>:short_date)%></span>
    <hr class="hor_line"/>
</div>
<div class="basic_info_section">

    
      <div class="label_collection_part">
          <div class="label_part">
              <div class="label_name"><%=t('books.student_name')%></div>
              <div class="value_span" style="font-weight:bold;"><%= @ft.fetch_payee.full_name %></div>
          </div>
          <div class="label_part label_right">
              <div class="label_name label_right_value"><%="#{t('course_text')}" %></div>
              <div class="value_span" style="font-weight:bold;"><%= @full_course_name %></div>
          </div>    
      </div>
      <div class="label_collection_part">
          <div class="label_part">
              <div class="label_name"><%="#{t('admission_no')}"%></div>
              <div class="value_span" style="font-weight:bold;"><%=@ft.fetch_payee.admission_no%></div>
          </div>
          <% if @parent.present? %>
          <div class="label_part label_right">
              <div class="label_name label_right_value"><%="#{t('parent')}" %></div>
              <div class="value_span" style="font-weight:bold;"><%= @parent %></div>
          </div>
          <% end %>
      </div>
      <div class="label_collection_part">
          <% if @roll_number.present? %>
          <div class="label_part">
              <div class="label_name"><%="#{t('roll_no')}"%></div>
              <div class="value_span" style="font-weight:bold;"><%=@ft.fetch_payee.roll_number%></div>
          </div>
          <% end %>
      </div>
      

</div>
