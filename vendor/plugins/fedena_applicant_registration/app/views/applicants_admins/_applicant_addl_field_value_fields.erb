
<% if c.object._destroy and c.object._destroy==true%>
  <div class="fields div_container" style="display:none;" />
<% else %>
  <div class="fields div_container">
  <% end %>
  <div class="div_row">
    <div class="div_td">
      <%= c.text_field :option %>
      <%= link_to_remove_fields "", c %>
    </div>
    <div class="div_td zero_rt_border">
      <%= c.radio_button 'is_default',true,:class=>'radio_options' %>
      <%= c.hidden_field :is_default,:value=>c.object.is_default,:class=>'hidden_radio_options'%>
    </div>
  </div>
</div>
