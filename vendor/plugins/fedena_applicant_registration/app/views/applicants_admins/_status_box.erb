<div class="create-status-link">
  <%= link_to_remote t('create_status'), :url=>new_status_applicants_admins_path, :method=>:get %>
</div>
<% active_statuses = statuses.select{|s| s.is_active} %>
<% inactive_statuses = statuses.select{|s| s.is_active == false} %>
<table class="gray_table_list" align="center" width="100%" cellpadding="0" cellspacing="0">
  <tr class="main_head">
    <td class="set_border_right" style="width:25%"><%= t('status') %></td>
    <td class="set_border_right" style="width:50%"><%= t('description') %></td>
    <td class="set_border_right" style="width:25%"></td>
  </tr>
  <tr class="tr-list_head">
    <td colspan="3"><%= t('active_statuses') %> &#x200E;(<%= active_statuses.count %>)&#x200E;</td>
  </tr>
  <% if active_statuses.present? %>
    <% active_statuses.each do |c| %>
      <tr class="row-b">
        <td class="set_border_right"><%= c.is_default==true ? t(c.name) : c.name %> </td>
        <td class="set_border_right"><%= c.description %></td>
        <td class="set_border_right"><%= link_to_remote t('edit'), :url=>edit_status_applicants_admin_path(c), :method=>:get if c.can_be_edited?  %>
          <%= link_to_remote t('delete'), :url=>delete_status_applicants_admin_path(c), :method=>:get, :confirm => t('delete_confirm_msg') if c.can_be_deleted?  %></td>
      </tr>
    <% end %>
  <% else %>
    <tr class="row-b">
      <td colspan="4">
        <%= t('no_statuses_found') %>
      </td>
    </tr>
  <% end %>
  <tr class="tr-list_head">
    <td colspan="3"><%= t('inactive_statuses') %> &#x200E;(<%= inactive_statuses.count %>)&#x200E;</td>
  </tr>
  <% if inactive_statuses.present? %>
    <% inactive_statuses.each do |c| %>
      <tr class="row-b">
        <td class="set_border_right"><%= c.is_default==true ? t(c.name) : c.name %> </td>
        <td class="set_border_right"><%= c.description %></td>
        <td class="set_border_right"><%= link_to_remote t('edit'), :url=>edit_status_applicants_admin_path(c), :method=>:get if c.can_be_edited?  %>
          <%= link_to_remote t('delete'), :url=>delete_status_applicants_admin_path(c), :method=>:get, :confirm => t('delete_confirm_msg') if c.can_be_deleted?  %></td>
      </tr>
    <% end %>
  <% else %>
    <tr class="row-b">
      <td colspan="4">
        <%= t('no_statuses_found') %>
      </td>
    </tr>
  <% end %>

</table>

<div class="hor-line margin-top-35"></div>