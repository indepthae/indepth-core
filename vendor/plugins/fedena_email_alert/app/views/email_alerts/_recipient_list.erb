<div class="label-field-pair">
  <label><%= t('recipient') %><span class="necessary-field">*</span></label>
  <div class ="scrollable" >
    <div class="scroll-inside" id="recipient-list">
      <% x = '<span> x </span>' %>
      <% @recipients.each do |r|  %>
          <div class="hover">
            <%= link_to shorten_string(r.full_name,22) + x, "#", 'data-recipient-id' => r.id, :onClick => "remove_recipient(self)", :class=> 'individual'%>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="extender"></div>
