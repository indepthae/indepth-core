<div class="list_table_div">
    <% total_net_amount = 0 %>
    <div class="main_head_label">
        <b id="fees_report_title">
            <%= t('inventory_transaction_report')%> - <%= @store.name%>
            <% if @accounts_enabled %>
              <%= "#{t('for')}: #{@account_name}" %>
              <% url_params = {:fee_account_id => @account_id} %>
            <% else %>
              <% url_params = {} %>
            <% end %>
        </b>

        <div class="date_align right">
            <label class="date_tag"><%= params[:date_tag] %></label>&nbsp;
            <%= format_date(@start_date) %> &nbsp; 
            <label class="to_date"><%= t('to') %></label> &nbsp; 
            <%= format_date(@end_date) %> 
            <span id="show_date" class="themed_hover_text" >
                <%= t('change')  %>
                <!-- 
                < %= link_to_remote t('change_date'),:url => {:controller => "grns",:action =>"show_date_filter",
                  :target_action=>@target_action,:id=>params[:id],:date_tag=>params[:date_tag],
                  :start_date=>@start_date,:end_date=>@end_date}%> -->
            </span>
        </div>
    </div>

    <% unless @grns.empty?%>
      <table class="gray_table_list" align="center" width="100%" cellpadding="0" cellspacing="0">
          <tr class="main_head">
              <td><%= t('grn_no') %></td>
              <td class="set_border_right"><%= t('invoice_no') %></td>
              <td class="set_border_right"><%= t('date_text') %></td>
              <td class="set_border_right"><%= t('amount') %> (<%= currency %>)</td>
          </tr>
          <% @grns.each do |t| %>
            <tr class="row-b">
                <td >
                    <%= link_to t.grn_no, {:controller => 'grns', :action => 'report_detail', :id => t.id, 
                      :store_id => params[:id], :start_date => @start_date, :end_date => @end_date}.
                      merge(url_params) %>
                </td>
                <td class="set_border_right"><%= t.invoice_no  %></td>
                <td class="set_border_right"><%= format_date(t.grn_date, :format => :long_date) %> </td>
                <td class="set_border_right" align="right"><%= precision_label t.amount %> </td>
                <% total_net_amount += t.amount.to_f %>
            </tr>
          <% end %>
      </table>

      <div class="total_amount_div">
          <label><%= t('net_expenses') %></label>
          <label class="amount_label"><%= precision_label(@grand_total) %></label>
      </div>

      <div class="seprater_div_bottom">
          <div id="inner-tab-menu">
              <ul>
                  <li class='themed_bg themed-dark-hover-background'>
                      <%= link_to "#{t('csv_report')}", {:controller => "grns", :action => "list_grn_csv",
                        :id => params[:id], :start_date => @start_date, :end_date => @end_date }.
                        merge(url_params) %>
                  </li>
              </ul>
          </div>
      </div>

    <% else %>
      <div class="no_entries"><%=t('no_transactions_present')%></div>
    <% end %>
</div>

<script>

  j('.date_box').hide();

  j("#show_date").click(function () {
      j(".date_box").show();
      j("#show_date").hide();
  });

  j("#hide_date_filter").click(function () {
      j(".date_box").hide();
      j("#show_date").show();
  });

  if (j('#hide_date_filter').is(":visible")) {
      j('#show_date').hide();
  }

</script>