<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('gallery') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('galleries.albums') %></div>

<div id="inner-tab-menu">
  <ul>
    <% if params[:id].present? %>
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('student_profile')}", :controller => 'student', :action => 'profile', :id => params[:id] %></li>
    <% end %>

  </ul>
</div>

</div>
<div id="page-yield">
<div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice]  %> </p>
  <% end %>



  <% if @categories.count>0 %>

    <div class="album_block">
  <div class="published_count">
      <b><%=t('galleries.albums')%></b>
     &#x200E;(<%=@total_albums%>)&#x200E;
  </div>

  <% @categories.each_with_index do |category,index| %>
  <% index= index+1%>
  <%thumbs=@grouped_photos[category.id]%>
  <%= '<div class="row row_spacing">' if ((index+2)%3) == 0  %>
  <div class='album<%= (index+1)%3 == 0 ? " album_middle" : "" %>' onClick="openAlbum(<%= category.id %>)"  >
  <%if @grouped_photos[category.id].present? ? @grouped_photos[category.id].count >= 4 : false %>
      <div class="imagebox grid_spacing">
        <div class="row">
          <%= "<div class='four_images left_side'  style=\" background-image: url('#{thumbs[-1].photo.url(:small, false)}');\">"%>
          </div>
            <%= "<div class='four_images right_side' style=\" background-image: url('#{thumbs[-2].photo.url(:small, false)}');\">"%>
          </div>
        </div>
        <div class="row">
            <%= "<div class='four_images left_side' style=\" background-image: url('#{thumbs[-3].photo.url(:small, false)}');\">"%>
          </div>
            <%= "<div class='four_images right_side' style=\" background-image: url('#{thumbs[-4].photo.url(:small, false)}');\">"%>
          </div>
        </div>
      </div>
   <%else%>
   <div class="imagebox">
          <%= "<div class='#{category.gallery_photos.alive.count== 0 ? "single_image stub" : "single_image"}' #{@grouped_photos[category.id].present? ?  "style=\" background-image: url('#{thumbs.last.photo.url(:thumb, false)}');\"" : ""  }>"%>
          </div>
    </div>
   <%end%>
      <div class="album_description">
        <div class="album_head">
          <%=category.name%>
        </div>
        <div class="tags">
          <div class="tag date_tag">
            <%= category.created_at.present? ? format_date(category.created_at.to_date) : "&nbsp;"%>
          </div>
          <div class="tag count_tag">
            <%=@grouped_photos[category.id].present? ? @grouped_photos[category.id].count : "0"%> Photos
          </div>
        </div>
      </div>
    </div>

  <% #row %>
  <%= '</div>'if (index%3) == 0%>
  <%end%>

  <% #In case row doesnt get closed - In last case where no of album is less than 3 %>
  <%= '</div>'if (@categories.count%3) != 0%>
</div>

  <% else %>
    <p class="flash-msg"><%= "#{t('no_category')}" %></p>
  <% end %>
<%= will_paginate @categories,:params=>{:controller => "galleries",:action => "archived_albums"}%>
</div>
<script>


function openAlbum(id){
  window.open('/galleries/old_category_show/'+id+' ','_self')
}

</script>
