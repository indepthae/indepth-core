<table align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
        <td class="col-5"><%= "#{t('activities')} &#x200E;(#{assessments['assessments'].count})&#x200E;" %></td>
        <td class="col-6"><%= t('submission_status') %></td>
        <td class="actions"></td>
    </tr>
    <% assessments['assessments'].each do |assessment| %>
      <tr class="tr-<%= cycle('even', 'odd') %>">
          <td><%= assessment.activity.name %></td>
          <td>
              <span class="status"><%= assessment.submission_status_text %></span>
          </td>
          <td>
              <%= link_to t('enter_grades'), activity_scores_assessments_path(:batch_id=>batch.id, :assessment_group_id => assessment_group.id, :assessment_id => assessment.id) %>
          </td>
      </tr>
    <% end %>
</table>