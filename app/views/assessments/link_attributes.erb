<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('gradebook') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('manage_gradebook') %></div>
</div>
<div id="page-yield">
    <div class="bread_crumb">
        <% breadcrumb :assessments_link_attributes, [@assessment_group,@academic_year,@course,@batch] %>
        <%= render_breadcrumbs  %>
    </div>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <div class="assessments_box">
        <div class="assessments_head">
            <div class="left">
                <label><%=t('exam_group')%></label>
                <span><%= @assessment_group.name_with_code %></span>
            </div>
            <div class="right">
                <label><%=t('status')%></label>
                <span><%='Active'%></span>
            </div>
        </div>
        <div class="assessments_details">
            <% batches = @course.batches_in_academic_year(@academic_year.id) %>
            <%= render :partial=> 'assessment_group_details' , :locals => {:batches => batches}%>
        </div>
        <div class="link_attributes_box">
            <% if @subjects.present? %>
              <div class="header"><%=t('exam_subjects_and_att_profile')%></div>
              <div class="form_cont">
                <%= render :partial=>'link_attribute_form' %>
              </div>
            <% else %>
              <p class="flash-msg"> <%= t('no_subjects') %> </p>
            <% end %>
        </div>
    </div>
