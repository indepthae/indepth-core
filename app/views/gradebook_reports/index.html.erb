<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('gradebook') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('gradebook_reports') %></div>
</div>
<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>
    <div class="box">
          <div class="link-box">
              <div class="link-heading"><%= link_to t('student_reports'), :controller=> "gradebook_reports", :action=>'student_reports' %></div>
              <div class="link-descr"><%= t('student_reports_desc')%></div>
          </div>
    </div>
    <div class="box">
          <div class="link-box">
              <div class="link-heading"><%= link_to t('subject_reports'), :controller=> "gradebook_reports", :action=>'subject_reports' %></div>
              <div class="link-descr"><%= t('subject_reports_desc')%></div>
          </div>
    </div>
    <div class="box">
          <div class="link-box">
              <div class="link-heading"><%= link_to t('consolidated_reports'), :controller=> "gradebook_reports", :action=>'consolidated_exam_report' %></div>
              <div class="link-descr"><%= t('consolidated_reports_desc')%></div>
          </div>
    </div> 
</div>