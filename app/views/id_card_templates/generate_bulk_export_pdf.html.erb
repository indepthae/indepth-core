<link href="https://fonts.googleapis.com/css?family=Courgette|Lato|Lora|Playball" rel="stylesheet">
<%if @single_page_enabled %>
<style>
  <%if rtl?%>
    .new-page {
    page-break-before: always;
    }

    .keep-together {
    page-break-inside: avoid;
    }

    .break-after {
    page-break-after: always;
    }
    div.preview{
    position: relative;
    box-sizing: border-box;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    font-size: 6pt;
    line-height: 1.2;
    display: inline-block;
    vertical-align: top;
    text-align: right;
    -webkit-transform: scale(2.341);
    -webkit-transform-origin: 100% 0%;

    }

    div.front, div.back{
    box-sizing: border-box;
    page-break-before: always;
    page-break-inside: avoid;
    }
  <%else%>
    .new-page {
      page-break-before: always;
    }

    .keep-together {
      page-break-inside: avoid;
    }

    .break-after {
      page-break-after: always;
    }
    div.preview{
      position: relative;
      box-sizing: border-box;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      font-size: 6pt;
      line-height: 1.2;
      display: inline-block;
      vertical-align: top;
      text-align: left;
      -webkit-transform: scale(2.341);
      -webkit-transform-origin: 0% 0%;
      
    }

    div.front, div.back{
      box-sizing: border-box;
      page-break-before: always;
      page-break-inside: avoid;
    }
  <%end%>

</style>
<%else%>
<style>
  <%if rtl?%>
  div.preview {
    position: relative;
    border-width: 1px;
    border-color: #333;
    overflow: hidden;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    box-sizing: border-box;
    font-size: 6pt;
    line-height: 1.2;
    margin: 4mm;
    display: inline-block;
    border-style: solid;
    border-color: #777;
    border-width: 1px;
    vertical-align: top;
    text-align: right;
  }

  div.preview img {
    max-width: 100%;
    max-height: 100%;
  }


  .new-page {
    page-break-before: always;
  }

  .keep-together {
    page-break-inside: avoid;
  }

  .break-after {
    page-break-after: always;
  }
  div.front{
    display: inline-block;
  }

  div.back{
    display: inline-block;
  }
  html{text-align: center;}
  <%else%>
    div.preview {
      position: relative;
      border-width: 1px;
      border-color: #333;
      overflow: hidden;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      box-sizing: border-box;
      font-size: 6pt;
      line-height: 1.2;
      margin: 4mm;
      display: inline-block;
      border-style: solid;
      border-color: #777;
      border-width: 1px;
      vertical-align: top;
      text-align: left;
    }

    div.preview img {
      max-width: 100%;
      max-height: 100%;
    }


    .new-page {
      page-break-before: always;
    }

    .keep-together {
      page-break-inside: avoid;
    }

    .break-after {
      page-break-after: always;
    }
    div.front{
      display: inline-block;
    }

    div.back{
      display: inline-block;
    }
    html{text-align: center;}
  <%end%>

</style>
<%end%>

