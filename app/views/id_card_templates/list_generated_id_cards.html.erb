<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('id_cards') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'> <%= t('view_id_cards') %></div>
  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('new_template')}", new_id_card_template_id_card_templates_path %></li>
    </ul>
  </div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= breadcrumb :id_card_templates_list_generated_id_cards, @id_card_template %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="box">
    <div class="academic_year_container">
      <div class="academic_year_switcher">
        <label class="normal"><%= t('academic_year') %></label>
        <%= select '', :academic_year , @academic_years.map{|a| [a.name,a.id]}, {:include_blank=>t('all')}, :class=>"academic_year_selector", :id=>"academic_year",
        :onchange => "#{remote_function(:url => {:action => "generated_id_cards_list"},:with => "'academic_year_id='+value+'&id_card_template_id=#{@id_card_template.id}' " )}" %>
      </div>
    </div>
    
    <div class="head">
      <%= "#{t('id_card_template')}: #{@id_card_template.name } "%>
    </div>
    
    <div class="sub_head">
      <%= t('individual_id_cards') %>
    </div>
    <div class="sub_head_desc">
      <%= t('individual_id_cards_desc') %>
    </div>
    <div class="list" id="generated_id_cards_list">
      <%= render "id_card_templates/generated_id_cards_list.html.erb" %>
    </div>
    
    
    <div class="sub_head">
      <%= t('bulk_generated_id_cards') %>
    </div>
    <div class="sub_head_desc">
      <%= t('bulk_generated_id_cards_desc') %>
    </div>
    <div class="list" id="bulk_generated_id_cards_list">
      <%= render "id_card_templates/bulk_generated_id_cards_list.html.erb" %>
    </div>



  </div>
</div>
