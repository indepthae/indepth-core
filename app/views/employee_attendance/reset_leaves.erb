<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('manage_attendance') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('reset_leaves').titleize %></div>
  <% unless @leave_types.zero? %>

    <div id="inner-tab-menu">
      <ul>
        <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('reset_by_leave_group')}",{ :controller=>"employee_attendance", :action=>"reset_by_leave_groups" }%></li>
        <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('reset_leaves_of_all_employees')}",{ :controller=>"employee_attendance", :action=>"reset_all_employees" }%></li>
      </ul>
    </div>
  <% end %>
</div>

<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  <h4><%= t('reset_leaves').titleize %></h4>
  <div class="description"><%= t('reset_leave_desc') %></div>
  <% unless @leave_types.zero? %>

    <div id="search_box_bg">
      <form name="employee" action="" style="display:inline;">

        <div id="form-content">
          <div id="search_textbox">
            <%= text_field_tag("query", params['query'], :autocomplete => 'off', :placeholder => "#{t('search_employee_name_or_no')}") %>
            <%= image_tag("loader.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "loader1",
              :style => "display: none;" ) %><br/>
          </div>
        </div>
      </form>
      <div class="label-field-pair">
        <div class="text-input-bg"><%= select :employee_department, :department_id, @departments.map {|c| [c.name, c.id]},
            {:prompt => "#{t('select_the_department')}"},
            {:onChange => "#{remote_function(:url => {:action => "list_department_leave_reset"},
            :with => "'department_id='+value",:before=>"$('loader').show();",:success=>"$('loader').hide();")}"} %>
          <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
        </div>
      </div>
    </div>
    <div id="employee_list"></div>

    <div id="modal-box" style="display:none;"></div>
  <% end %>
</div>


