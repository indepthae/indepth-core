
<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('subjects_center_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('connect_subjects') %></div>

</div>
<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <div id="error">
      
    </div>
    <div class="planner_box">
          <div class="label-field-pair">
              <label for="employee_total-experience"><%= t('select_a_batch') %></label>
              <div class="text-input-bg">
                  <%= select :connect_subjects, :batch_id, options_for_select(@course.batches.active.map{|b| [b.name, b.id]}),
                    {:include_blank => t('select_a_batch')}, {:onchange => "#{remote_function(:url => {:action => "list_connectable_subjects"},:with => "'batch_id='+value",
                    :before => "Element.show('loader1')",:success => "Element.hide('loader1')")}"} %>
                  <%= image_tag("loader.gif",
                    :align => "absmiddle",
                    :border => 0,
                    :id => "loader1",
                    :style =>"display: none;" ) 
                  %>
              </div>
          </div>

          <div class='connect' id='connect_form'>
          </div>
          
    </div>

    <div class="extender"></div>
</div>

