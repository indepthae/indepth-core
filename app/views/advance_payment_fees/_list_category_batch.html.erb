<div class="right-floated">
  <div class="label-container">
    <label><%= "#{t('category_name')}" %> : <%= "#{@advance_fee_category.name}" %></label>
  </div>
  <div class="batch-list">
    <table class="gray_table_list" align="center" width="100%" cellpadding="0" cellspacing="0">
        <tr class="main_head tr-list_head">
            <td class="set_border_right sl-sec" ><%= t('sl_no') %></td>
            <td class="set_border_right" >
                <span class="show_amount" ><%= t('batch_name') %></span>
            </td>
        </tr>
        <% if @batches.present? %>
          <% @batches.each_with_index do |batch, i| %>
              <tr>
                <td class="set_border_right"><%= i + 1 %></td>
                <td class="set_border_right"><%= "#{batch.full_name}" %>
                  <label><%= t('inactive_category_batch') unless  @advance_fee_category.batch_status(@advance_fee_category.id, batch.id) %></label>
                </td>
              </tr>
          <% end %>
        <% end %>
    </table>
  </div>
</div>
