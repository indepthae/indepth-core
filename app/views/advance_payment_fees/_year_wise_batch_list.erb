<% unless @batches.present? %>
    <div class="empty-info"><%= t('no_batches_text')%></div>
<% else %>
    <div class="label-field-pair">
        <div class="label-container">
            <label for="name"><%= "#{t('name')}" %><span class="necessary-field">*</span></label>
        </div>
        <div class="input-container"><%= text_field :advance_fee_category, :name %></div>
    </div>

    <%= hidden_field :advance_fee_category, :financial_year_id, :value => @current_financial_year.id%>

    <div class="label-field-pair">
        <div class="label-container"><%= label :advance_fee_category, "#{t('description')}" %></div>
        <div class="input-container"><%= text_field :advance_fee_category, :description %></div>
    </div>


    <div class="label-field-pair">
        <label for="method"><%= t('enable_online_payment_for_advance_payment') %> :</label>
        <div class="online-opt-block">
            <%= radio_button :advance_fee_category, "online_payment_enabled", "1", :checked => true, :class => "something" %>
            <%= label :advance_fee_category, :online_payment_enabled, t('yes_text') %>
            <%= radio_button :advance_fee_category, "online_payment_enabled", "0", :checked => false, :class => "something" %>
            <%= label :advance_fee_category, :online_payment_enabled, t('no_texts') %>
        </div>
    </div>


    <div class="label-field-pair">
        <div class="label-container"><label><%= t('select_a_batch') %> :</label></div>
        <div class="batches">
            <div class="sel-list">
            <%= t('select') %>
            : <%= link_to_function t('all'), {:onclick => "just(1);"} %>
            ,
            <%= link_to_function t('none'), {:onclick => "just(0);"} %>
            </div>
            <% @batches.each do |f| %>
                <div class="each_batch">
                <%= check_box_tag "advance_fee_category[advance_fee_category_batches_attributes][#{f.id}][batch_id]", f.id %>
                <label><%= f.full_name %></label>
                </div>
            <% end %>
        </div>
    </div>

    <div class="extender" style="height:20px"></div>
    <div id="sub-button">
        <%= submit_tag "â–º #{t('save')}", {:class => 'submit_button', :id => 'submit_button'} %>
    </div>
<% end %>