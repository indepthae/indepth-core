<% if rtl? %>
  <%= stylesheet_link_tag "rtl/gray_table_design" %>
<% else %>
  <%= stylesheet_link_tag "gray_table_design" %>
<% end %>

<% if @students.present? or @student.present? %>
  <table class="gray_table_list" align="center" width="100%" cellpadding="0" cellspacing="0">
    <tr class="main_head">
      <td style="width: 10%"><%= t('sl_no') %></td>
      <td class="set_border_right"><%= t('student_name') %></td>
      <td class="set_border_right" style="width: 20%"><%= t('balance') %> (<%= currency %>)</td>
    </tr>

      <% sub_head =  "#{t('course_name')} : #{@course.full_name}" if @course.present? %>
      <% sub_head =  "#{t('batch_name')} : #{@batch.full_name}" if @batch.present? %>
      <tr class="tr-list_head">
        <td colspan="2"><%= sub_head %></td>
        <td id="inc_amount" align="right"></td>
      </tr>
    <% if @students.present? %>
      <% @students.each_with_index do |student, i| %>
        <tr class="row-b">
          <td style="width: 10%"><%= i + 1 %></td>
          <td class="set_border_right"><%= student.full_name %> (<%= student.admission_no %>)</td>
          <td class="set_border_right">
            <%=link_to_remote student.advance_fee_wallet.present? ? student.advance_fee_wallet.amount : 0.00 , :url => {:controller => "advance_payment_fees",
            :action => 'wallet_transactions_by_student', :student_id => student.id, :p_1 => 1, :p_2 => 2 } %>
          </td>
        </tr>
      <% end %>
    <% elsif @student.present? %>
      <tr class="row-b">
        <td style="width: 10%"><%= 1 %></td>
        <td class="set_border_right"><%= @student.full_name %> (<%= @student.admission_no %>)</td>
        <td class="set_border_right">
          <%=link_to_remote @student.advance_fee_wallet.present? ? @student.advance_fee_wallet.amount : 0.00 , :url => {:controller => "advance_payment_fees",
          :action => 'wallet_transactions_by_student', :student_id => @student.id, :p_1 => 1, :p_2 => 2 } %>
        </td>
      </tr>
    <% end %>    
  </table>
  <div class="seprater_div_bottom">
    <div id="inner-tab-menu">
      <ul style="margin-top: 27px;">
        <li class='themed_bg themed-dark-hover-background'>
          <%= link_to "#{t('pdf_report')}", {:controller => "advance_payment_fees", :action => "transaction_pdf",
          :batch_id => (@batch.id if @batch.present?), :course_id => (@course.id if @course.present?)}, :target => '_blank'%>
        </li>
        <li class='themed_bg themed-dark-hover-background'>
          <%= link_to "#{t('csv_report')}", {:controller => "csv_export", :action => "generate_csv",
                                             :csv_report_type => "advance_fees", :report_format_type => "csv",
                                             :batch_id => (@batch.id if @batch.present?), :course_id => (@course.id if @course.present?)} %>
        </li>
      </ul>
    </div>
  </div>
<% else %>
  <div class="no_entries" align="center">
    <p>No Records</p>
  </div>
<% end %>
