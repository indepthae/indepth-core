<% unless @advance_fee_categories.present? %>
    <div class="no_entries"><%= t('no_advance_fees_categories_text') %></div>
<% else %>
    <div class="box">
        <table class="gray_table_list" align="center" width="100%" cellpadding="0" cellspacing="0">
            <tr class="main_head tr-list_head">
                <td class="set_border_right width50" ><%= t('sl_no') %></td>
                <td class="set_border_right" >
                    <span class="show_amount" ><%= t('category_name') %></span>
                </td>
                <td class="set_border_right width200" ><%= t('options') %></td>
            </tr>
            <% @advance_fee_categories.each_with_index do |f, i| %>
                <tr>
                <td class="set_border_right"><%= i + 1 %></td>
                <td class="set_border_right"><%= f.name %></td>
                <td class="set_border_right">
                    <%= link_to_remote "#{t('edit')}", :url => {:action => 'edit_advance_fee_category', :id => f.id} %>&nbsp &nbsp
                    <%= link_to "#{t('delete')}", {:action => 'delete_advance_fee_category', :id => f.id}, :confirm => t('delete_advance_fee_category_confirmation_text'), :class => "cross-delete-#{f.check_is_deletable.to_s}" %>&nbsp &nbsp
                    <%= link_to_remote "#{t('show_batches')}", :url => {:action => 'show_advance_fees_category_batches', :id => f.id} %>
                </td>
                </tr>
            <% end %>
        </table>
    </div>
    <%= will_paginate @advance_fee_categories, :renderer=>'RemoteLinkRenderer'%>
<% end %>