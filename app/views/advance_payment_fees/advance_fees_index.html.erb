<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('advance_payment_for_student') %></h1>

  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('manage_fees') %></div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs %>
    <div id="financial_year_details">
      <%= render :partial => "/finance/financial_year_info.erb" %>
    </div>
  </div>

  <div id="flash_box"></div>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"><%= flash[:notice] %></p>
  <% end %>
    <div class="box">
      <% if @advance_fee_config %>

        <div class="link-box">
          <div class="link-heading">
            <%= link_to "#{t('advance_fee_categories_text')}", :action => 'advance_fee_categories_list' %>
          </div>
          <div class="link-descr"> <%= t('advance_fee_categories_text_desc') %></div>
        </div>

        <div class="link-box">
          <div class="link-heading">
            <%= link_to "#{t('fees_collection')}", :action => 'advance_fees_collection_index' %>
          </div>
          <div class="link-descr"> <%= t('fees_collection_desc') %></div>
        </div>

      <% else %>
        <div class="no_entries"><%= t('active_financial_year_description') %></div>
      <% end %>
    </div>
</div>

<div id="modal-box" style="display:none;"></div>
