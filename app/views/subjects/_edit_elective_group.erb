<div id="subjects-form">

    <% form_remote_for :elective_group do |f| %>

      <%= f.hidden_field :id, :value => @elective_group.id %>

      <div id="form-errors"></div>

      <div class="label-field-pair">
          <div class="label-container"><label><%= t('name') %></label></div>
          <div class="input-container"><%= f.text_field :name %></div>
      </div>
      <%if @elective_group.batch.course.cce_enabled?%>
        <div class="label-field-pair">
            <div class="label-container"><label>6<sup>th</sup> subject</label></div>
            <div class="input-container"><%= f.check_box :is_sixth_subject%></div>
        </div>
      <%end%>
      <% if @elective_group.batch.course.enable_student_elective_selection %>
        <div class="label-field-pair">
            <div class="label-container"> <%= f.label "#{t('end_date_of_selection')}" %></div>
            <div class="text-input-bg">
                <%= calendar_date_select_tag 'elective_group[end_date]', I18n.l(@elective_group.end_date.try(:to_date) || (Date.today + 7.days)  ,:format=>:default),
                 :year_range => 15.years.ago..5.years.from_now, :readonly=>true, :popup=>"force" %>
            </div>
        </div>
      <% end %>

      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>

    <% end %>
</div>