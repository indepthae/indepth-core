<div id="subjects-form">
  <p><%= @batch.full_name unless @batch.nil? %></p>

  <% form_remote_for @subject do |f| %>

    <% elective_group_id = (@elective_group.nil? ? nil : @elective_group.id) %>
    <%= f.hidden_field :elective_group_id, :value => elective_group_id %>

    <div id="form-errors"></div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('name') %></label></div>
      <div class="input-container"><%= f.text_field :name %></div>
    </div>
    <% if @subject.course_subject_id.nil? %>
      <div class="label-field-pair">
        <div class="label-container"><label><%= t('code') %></label></div>
        <div class="input-container"> <%= f.text_field :code %></div>
      </div>
    <% end %>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('max_weekly_class') %></label></div>
      <div class="input-container"> <%= f.text_field :max_weekly_classes %></div>
    </div>

    <% if @batch and (@batch.cwa_enabled? or @batch.gpa_enabled?) %>
      <div class="label-field-pair">
        <div class="label-container"><label>Credit Hours</label></div>
        <div class="input-container"> <%= f.text_field :credit_hours %></div>
      </div>
    <% end %>

    <div class="label-field-pair">
      <div class="label-container"><label><%= t('no_exam') %></label></div>
      <div class="input-container"><%= f.check_box :no_exams %></div>
    </div>
    
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('exclude_for_final_score') %></label></div>
      <div class="input-container"><%= f.check_box :exclude_for_final_score %></div>
    </div>
    
      <% has_dependency = !f.object.has_no_assessments %>
      <div class="label-field-pair">
        <div class="label-container pull-left"><label><%= t('is_activity') %></label></div>
        <div class="input-container pull-left"><%= f.check_box :is_activity, :onchange => 'toggle_skill_set(this)', :disabled=> has_dependency %></div>
      </div>
      <div class="label-field-pair" id="skill_selector" style="display: <%= f.object.is_activity? ? 'none' : 'block'%>">
            <div class="label-container pull-left"><label><%= t('select_skill_set') %></label></div>
            <div class="input-container pull-left">
                  <%= f.select :subject_skill_set_id, @skill_sets.map{|s| [s.name, s.id]}, 
                            {:include_blank => t('choose_a_skill_set')}, :disabled => has_dependency %>
            </div>
      </div>
    
    <%if @batch.course.cce_enabled? and !@subject.elective_group_id.present?%>
      <div class="label-field-pair">
        <div class="label-container"><label>6<sup>th</sup> subject</label></div>
        <div class="input-container"><%= f.check_box :is_sixth_subject%></div>
      </div>
      <div class="label-field-pair">
        <div class="label-container"><label>ASL subject</label></div>
        <div class="input-container"><%= f.check_box :is_asl,{:onclick=>'get_asl_mark_field(this)'} %></div>
      </div>
      <div class="label-field-pair_exp no_show" id="asl_mark">
        <div class="label-container"><label>ASL Mark</label></div>
        <div class="student_gender_value">
          <%= f.radio_button  "asl_mark", 20,:checked=>true %>
          <label class="label_for_gender margin_right_20" for="subject_asl_mark_20">20 Marks</label>
          <%= f.radio_button  "asl_mark", 10 %>
          <label class="label_for_gender" for="subject_asl_mark_10">10 Marks</label>
        </div>
      </div>
    <%end%>

    <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>

  <% end %>
</div>
<script type="text/javascript">
  j(document).ready(function(){
    if (j('#subject_is_asl').prop('checked') == true){
      j('#asl_mark').removeClass('no_show');
    }
  });
  get_asl_mark_field = function(e){
    if (j(e).prop('checked') == true){
      j('#asl_mark').removeClass('no_show');
    }
    else{
      j('#asl_mark').addClass('no_show');
    }
  }
  toggle_skill_set = function(e) {
      if(j(e).is(':checked')){
        j('#skill_selector').hide();
        j('#subject_subject_skill_set_id').val('');
      }else{
        j('#skill_selector').show();
      }
  }
</script>
