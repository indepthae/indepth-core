<div class="remark-set">
    <label class="core_label remark-set-name-label"><%="Remark Set Name"%></label>
    <%= f.text_field :name, :class => "text_field" %>
    <%= f.hidden_field :target_type, :value => f.object.target_type.present? ? f.object.target_type : target_type ,:class => "target_type"  %>
    <%= f.hidden_field :_destroy, :value => 0, :class => "destroy_field" %>
    <div class="remove_field" onclick="remove_field(this)"></div>
</div>