<%= stylesheet_link_tag 'jquery-ui_1.css' %>
<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('student_records') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('student_list') %></div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%if params[:rg_id].present?%>
      <% breadcrumb :student_records_list_students_rg, [@batch,RecordGroup.find(params[:rg_id])],@current_user %>
    <%else%>
      <% breadcrumb :student_records_list_students, @batch,@current_user %>
    <%end%>

    <%= render_breadcrumbs  %>
  </div>
  <div id="information">
    <%= render  :partial => 'list_students'%>
  </div>
</div>
