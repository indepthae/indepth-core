<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('leave_management') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('apply_or_check_status') %></div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <% breadcrumb :employee_attendance_new_leave_applications, @employee %>
    <%= render_breadcrumbs  %>
  </div>

  <div class="label-field-pair">
    <label for="leave_type"><%= t('select_department') %></label>
    <div class="text-input-bg"><%= select :leave_management_all, :department_id, @departments.map { |s| [s.name, s.id] },
        {:prompt => "#{t('select_department')}"},
        {:onChange => "#{remote_function(:url => {:action => "update_employees_select"},
        :with => "'department_id='+value+ '&emp_id=#{@employee.id}'",:before=>"$('loader').show();",:success=>"$('loader').hide();")}"} %>
      <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
    </div>
  </div>

  <div id="employees_select"> <%= render :partial => 'employee_select' %></div>
  <div class="extender"></div>



</div>