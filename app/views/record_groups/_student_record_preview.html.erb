<div class="text-input-bg spec_case"><%= select :batch, :id, @batches.map { |b| [b.full_name, b.id] },
    {:prompt => "#{t('any_record_group')}"},
    {:onChange => "#{remote_function(:url => {:action => "student_record_preview"},
    :with => "'batch_id='+value",:before=>"$('loader').show();",:success=>"$('loader').hide();")}"} %>
  <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
</div>
<div class="hor_line"></div>
<div id="batches_details"><%=render :partial=>'batches_student_records_preview'%></div>