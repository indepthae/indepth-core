<div class="label-field-pair_column">
  <span class="scrolable-left-label"><%= "#{t('employees')} (<span id='selected_employees_count'>0</span>)" %></span>
  <span class="right" onclick="remove_all_employees(this)"><%= t('remove_all') %></span>
  <div class ="scrolable" >
    <% x = '<span class="add-span"> x </span>' %>
    <div class="scroll-inside">
      <% @recipients_employees.each do |user|  %>
        <% employee= user.employee_record %>
        <div class="hover">
          <%= link_to shorten_string(user.full_name,22) + x, "#",
          :onClick => "remove_recipient(#{user.id})",
          :class=> 'individual',
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"
          %>
          <span class="id-span"><%= "("+employee.employee_number+")&#x200E;" %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="extender"></div>
<script type="text/javascript">
  set_employee_count();
</script>
