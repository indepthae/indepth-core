<% if @due_date.to_date < (@transaction_date ||  Date.today_with_timezone) %>
  <div id="fee-defaulters">
    <div class="text_box">
      <h5><%= t('due_date_exceeded_collect_fine') %>  </h5>
    </div>
    <div class="box"><% remote_form_for :fine, :url => {:action => 'update_student_fine_ajax' },:before=>"set_fine_amount()" do |form| %>

        <div class="label-field-pair1">
          <div class="text-input-bg">
            <%= form.text_field :fee, :value=>'' ,:id=>"fine_fee", :class=>'precision_text' %></div></div>
            <%= form.hidden_field :student, :value => @student.id %>
            <%= form.hidden_field :date, :value => @date.id %>
            <%= hidden_field_tag :transaction_date,params[:reference_no],:id=>"fine_transaction_date" %>
            <%= hidden_field_tag :reference_no, :value => params[:reference_no] %>
            <%= hidden_field_tag :payment_note, :value => params[:payment_note] %>
            <%= hidden_field_tag :payment_mode, :value => params[:payment_mode] %>
            <%=  submit_tag "â–º #{t('add_fine')}",:class=>'submit_button2',:id => 'fine_button',:onclick=>'return validate_fine();' %>
      <% end %>
    </div>
  </div>
<% end %>


