<% if (rtl?) %>
  <%= stylesheet_link_tag "rtl/gray_table_design" %>
  <%= stylesheet_link_tag "rtl/finance/monthly_report" %>
<% else %>
  <%= stylesheet_link_tag "gray_table_design" %>
  <%= stylesheet_link_tag "finance/monthly_report" %>
<% end %>

<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('finance_transactions') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'>
        <%=@batch.full_name%> <%= t('fees_report') %>
    </div>

    <% if permitted_to? :fee_receipts, :finance %>
      <div id="inner-tab-menu">
          <ul  style="margin-top: 30px">
              <li class='themed_bg themed-dark-hover-background'>
                  <%= link_to "#{t('search_receipts')}", :action => "fee_receipts" %>
              </li>
          </ul>
      </div>
    <% end %>
</div>

<div id="page-yield">
    <div class="bread_crumb">
        <% _params = [@start_date, @end_date] %>
        
        <% if @accounts_enabled %>
          <% _params += [@account_id] %>
          <% additional_params = {:fee_account_id => @account_id} %>
        <% else %>
          <% _params += [] %>
          <% additional_params = {} %>
        <% end %>

        <% breadcrumb :finance_batch_fees_report, [@fee_collection,@batch,_params] %>
        <%= render_breadcrumbs  %>
    </div>

    <div id="date_filter" class="date_box">
        <%= render :partial => "filter_dates", :locals => {:additional_params => additional_params} %>
    </div>

    <div id="fee_report_div">
        <%= render :partial => "batch_fees_report" %>
    </div>
</div>

<script>

  j('.date_box').hide();

  j("#show_date").click(function () {
      j(".date_box").show();
      j("#show_date").hide();
  });

  j("#hide_date_filter").click(function () {
      j(".date_box").hide();
      j("#show_date").show();
  });

</script>