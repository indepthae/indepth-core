<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('finance_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('tax_settings') %></div>
</div>
<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <h3><%= t('tax_settings') %></h3>
    <div class="description"><%= t('manage_tax_settings_description') %></div>

    <% form_for 'configuration', :url => {:action => "tax_settings"} do |f| %>


      <% # hiding temporarily %>
      <% if @show_me.present? %>
        <div class="label-field-pair">
            <label for="category_name"><%= t('finance_tax_name') %></label>
            <div class="text-input-bg">
                <%= f.text_field :finance_tax_name, :value => @config[:finance_tax_name], 
                  :placeholder => t('finance_tax_name') %>
            </div>
        </div>
      <% end %>

      <div class="label-field-pair">
          <label for="category_name"><%= t('finance_tax_identification_label') %></label>
          <div class="text-input-bg">
              <%= f.text_field :finance_tax_identification_label, 
                :value => @config[:finance_tax_identification_label], 
                :placeholder => t('finance_tax_identification_label') %>
          </div>
      </div>

      <div class="label-field-pair margin-bottom-80">
          <label for="category_name"><%= t('finance_tax_identification_number') %></label>
          <div class="text-input-bg">
              <%= f.text_field :finance_tax_identification_number, 
                :value => @config[:finance_tax_identification_number], 
                :placeholder => t('finance_tax_identification_number') %>
          </div>
      </div>

      <hr/>

      <%= submit_tag "#{t('save_settings')}", :disable_with => "#{t('please_wait')}", :class => "submit-button", :onsubmit=>"return validate()" %>
    <% end %>
</div>