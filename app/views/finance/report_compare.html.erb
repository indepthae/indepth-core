<% content_for :head do %>
  <% if (rtl?) %>
    <%= stylesheet_link_tag "rtl/gray_table_design" %>
    <%= stylesheet_link_tag "rtl/finance/monthly_report" %>
  <% else%>
    <%= stylesheet_link_tag "gray_table_design" %>
    <%= stylesheet_link_tag "finance/monthly_report" %>
  <% end %>
<% end %>

<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('transactions') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('transaction_comparision') %></div>
</div>

<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>
    
    <div id="date_filter">
        <%= render :partial => "compare_filter_date" %>
    </div>
    
    <div id="fee_report_div">
        <%= render :partial => "report_compare" %>
    </div>
</div>
