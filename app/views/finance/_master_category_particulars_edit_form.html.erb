<label class="head_label"><%= t('edit_particular_for_master_fee') %><span></span></label>


<div id="grading-levels-form">

    <% form_remote_for  @finance_fee_particular,:url=>{:action=>'master_category_particulars_update',:id => @finance_fee_particular.id}  do |f| %>

      <div id="form-errors"></div>

      <div class="label-field-pair">
          <div class="label-container"> <%= f.label "#{t('name')}" %></div>
          <div class="input-container">
            <%= f.select :master_fee_particular_id,
                         options_for_select(@master_fee_particulars.map { |x| [x.name, x.id] },
                                            @finance_fee_particular.master_fee_particular_id),
                         :include_blank => t('select_a_particular') %>
          </div>
      </div>

      <div class="label-field-pair">
          <div class="label-container"><%= f.label "#{t('description')}" %></div>
          <div class="input-container"><%= f.text_field :description %></div>
      </div>
      <div class="label-field-pair">
          <div class="label-container"><%= f.label "#{t('amount')}" %></div>
          <div class="input-container"> <%= f.text_field :amount, :value=> precision_label(@finance_fee_particular.amount),:class=>'precision_text' %></div>
      </div>
      <% if @tax_enabled %>
        <% tax_slab_id = @finance_fee_particular.tax_slab_ids.try(:last) %>
        <div class="label-field-pair">
            <div class="label-container"><%= f.label "#{t('tax_slab_text')}" %></div>
            <div class="input-container"> 
                <%= f.select :tax_slab_id, @tax_slabs.map {|slab| [slab.name, slab.id]}, 
                  :selected => tax_slab_id, :include_blank => t('select_a_tax_slab') %>
            </div>
        </div>
      <% end %>

      <%=  submit_tag "â–º #{t('update')}",:class=>'submit_button' %>


    <% end %>
</div>
