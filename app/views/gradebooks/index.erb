<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('gradebook') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('home') %></div>

</div>
<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <div class="box">
        <%  if permitted_to? :index, :assessment_plans %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('exam_planners'), :controller=> "assessment_plans", :action=>'index' %></div>
              <div class="link-descr"><%= t('planner_desc')%></div>
          </div>
        <% end %>
        <%  if permitted_to? :exam_management, :gradebooks %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('manage_gradebook'), :controller=> "gradebooks", :action=>'exam_management' %></div>
              <div class="link-descr"><%= t('planner_exam_managment_desc')%></div>
          </div>
        <% end %>
        <%  if permitted_to? :settings, :gradebooks %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('settings'), :controller=> "gradebooks", :action=>'settings' %></div>
              <div class="link-descr"><%= t('planner_settings_desc')%></div>
          </div>
        <% end %>
        <%  if permitted_to? :index, :gradebook_reports %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('gradebook_reports'), :controller=> "gradebook_reports", :action=>'index' %></div>
              <div class="link-descr"><%= t('gradebook_reports_desc')%></div>
          </div>
        <% end %>
        <div class="extender"></div>
    </div>
</div>

