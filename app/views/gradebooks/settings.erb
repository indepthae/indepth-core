<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('gradebook') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('settings') %></div>

</div>
<div id="page-yield">
    <div class="bread_crumb">
        <%= make_breadcrumb %>
        <%= render_breadcrumbs  %>
    </div>

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <div class="box">
        <%  if permitted_to? :index, :assessment_attributes %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('attribute_profiles'), :controller=> "assessment_attributes", :action=>'index' %></div>
              <div class="link-descr"><%= t('attribute_profiles_desc_main')%></div>
          </div>
        <% end %>
        <%  if permitted_to? :index, :assessment_activities %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('activity_profiles'), :controller=> "assessment_activities", :action=>'index' %></div>
              <div class="link-descr"><%= t('activity_profiles_desc_main')%></div>
          </div>
        <% end %>
        <%  if permitted_to? :index, :grading_profiles %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('grading_profiles_text'), :controller=> "grading_profiles", :action=>'index' %></div>
              <div class="link-descr"><%= t('grading_profiles_desc_main')%></div>
          </div>
        <% end %>
        <%  if permitted_to? :index, :remark_banks %>
          <div class="link-box">
              <div class="link-heading"><%= link_to t('remark_bank'), :controller=> "remark_banks", :action=>'index' %></div>
              <div class="link-descr"><%= t('remark_bank_link_descr') %></div>
          </div>
        <% end %>
        <div class="extender"></div>
    </div>
</div>

