<%total_paid_fine=0%>
<% i = 0 %>
<% @fee.finance_transactions_with_fine.each do |ft|%>
  <% if total_paid_fine == 0 %>    
    <tr class="row-a">
        <td class="sl-col col-1"></td>
        <td class="set_border_right bold_font" colspan="2">
            <span><%= t('fine') %></span>
        </td>
    </tr>
  <% end %>  
  <tr class="row-b">
      <td class="sl-col"><%= i+=1 %></td>
      <td class="set_border_right particular-col">
          <%= "#{t('fine_on')} #{format_date(ft.transaction_date)}" %></td>
      <td class="set_border_right amount-col normal_font align_right">
          <%= precision_label ft.fine_amount %>
      </td>
  </tr>
  <% total_paid_fine += ft.fine_amount %>
<% end %>

<% unless @transport_fee.is_paid %>
  <% if @fine_rule.present? and  @fine_amount > 0  %>
    <% if total_paid_fine == 0 %>      
      <tr class="row-a">
          <td class="sl-col col-1"></td>
          <td class="set_border_right bold_font" colspan="2">
              <span><%= t('fine') %></span>
          </td>
      </tr>    
    <% end %>    
    <tr class="row-b">
        <td class="sl-col"><%= i+=1 %></td>
        <td class="set_border_right particular-col">
            <%= "#{t('fine_on')} #{format_date(@date.due_date.to_date+@fine_rule.fine_days.days)} #{@fine_rule.is_amount ? "" : 
            " (#{@fine_rule.fine_amount}&#x200E;%)" }"  %>
        </td>
        <td class="set_border_right amount-col normal_font align_right">
            <%= precision_label @fine_amount%>
        </td>        
    </tr>    
    <% total_paid_fine +=@fine_amount %>
  <% end %>
<% end %>