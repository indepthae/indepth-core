<% content_for :head do %>
  <%= stylesheet_link_tag 'jquery-ui_1.css' %>
  <% if rtl? %>
    <%= stylesheet_link_tag 'rtl/student/student_wise_report' %>
  <%else %>
    <%= stylesheet_link_tag 'student/student_wise_report' %>
  <% end %>
<% end %>

<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('fees_text') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('student_fee_structure') %></div>
    <div id="inner-tab-menu"></div>
</div>

<div id="page-yield">
    <div class="bread_crumb">
        <%= breadcrumb :finance_extensions_view_fees_structure, @student %>
        <%= render_breadcrumbs  %>
    </div>
    <div id="flash_box">
        <% unless @flash_notice.nil? %>
          <p class="flash-msg">
              <%= @flash_notice %>        
          </p>
        <% end %>
    </div>
    <div id="modal-box" style="display:none;"></div>
    <div id="student_profile_heading1">
        <div id="student_main_info1">
            <span class="name"><b> <%= @student.full_name %></b> </span>
            <span class="course">
                <%= t('course_and_batch') %>: 
                <%= @student.batch.course_name %> - <%= @student.batch.name  %>  
            </span>
            <span class="adm"> 
                <%= t('adm_no') %>: <%= @student.admission_no %> 
            </span>
            <% if roll_number_enabled? %>
              <span class="adm"> 
                  <%= t('roll_no') %>: 
                  <%= (@student.roll_number.present? ? @student.roll_number : "-")  %> 
              </span>
            <% end %>
        </div>
        <div class="extender"></div>
    </div>
    <div class="extender"></div>

    <!--div class="line"></div-->

    <div class="extender"></div>

    <%= render :partial=> "student_batch_structure" %>
</div>
