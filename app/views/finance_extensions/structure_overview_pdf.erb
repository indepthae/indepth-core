<% if params[:d].present? %>
  <%= javascript_include_tag 'jquery/jquery-1.9.1.min.js' %>
<% end %>

<%#= javascript_include_tag 'jquery/jquery-ui.min.js' %>
<%= wicked_pdf_javascript_include_tag 'cache/javascripts/all' %>
<%= wicked_pdf_javascript_include_tag 'jquery/jquery-1.9.1.min.js' %>
<script type="text/javascript">
  var j = jQuery.noConflict();
</script>
<div id="page-yield">
    <div class="hor_line"></div>
    <h2><%= t('fee_structure') %></h2>
    <div class="hor_line"></div>
    <div class="extender"></div>
    <% total_tax = 0 %>
    <div class="report">
        <div id ="main_info">
            <h4> 
                <% if @search_query.present? %>
                  <%= "#{t('searched_for')} #{@search_query}" %>
                <% elsif @batch.present? %>
                  <%= "#{t('searched_for')} #{@batch.full_name}" %>
                <% end %>
            </h4>
        </div>
        <div id="pdf-info">
            <table id="pdf-table" width="100%" cellspacing="0">
                <tr class="table-header">
                    <td class="col-pdf"><%= t('sl_no') %></td>
                    <td class="col-pdf"><%= t('first_name') %></td>
                    <td class="col-pdf"><%= t('batch') %></td>
                    <td class="col-pdf"><%= t('adm_no') %></td>
                    <% if roll_number_enabled? %>
                      <td class="col-pdf"><%= t('roll_no') %></td>
                    <% end %>
                    <td class="col-pdf3"><%= "#{t('fees_text')}" %></td>
                </tr>
                <% i = 0 %>

                <% c= 'even' %>
                <% if @students.present? %>
                  <% @students.each_with_index do |student, i| %>
                    <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                        <td class="col-pdf"><%= (i+1) %></td>
                        <td class="col-pdf"><%= student.fullname %></td>
                        <td class="col-pdf"><%= student.batch_full_name %></td>
                        <td class="col-pdf"><%= student.admission_no %></td>
                        <% if roll_number_enabled? %>
                          <td class="col-pdf">
                              <%= student.roll_number.present? ? student.roll_number : "-" %>
                          </td>
                        <% end %>
                        <td class="col-pdf3">
                            <% fee_cnt = student.fee_count.to_i %>                            
                            <% student_fee = student.fee_due.to_f %>
                            <% total_fee = student_fee + student.transport_due.to_f + student.hostel_due.to_f %>                
                            <% if fee_cnt > 0 and  precision_label(student_fee).to_f > 0 %>                  
                              <% batch_id = student.present? ? student.batch_id : @batch.id %>
                              <%# total_fee += student.total_automatic_finance_fee_fine(batch_id) if batch_id.present? %>
                              <% total_fee += student.fine_amount.to_f if batch_id.present? %>
                            <% end %>
                            <%= precision_label(total_fee) %>
                        </td>
                    </tr>
                  <% end %>
                <% end %>
            </table>
        </div>
    </div>
</div>