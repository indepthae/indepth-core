<div class="label-field-pair">
    <label for="model_names"><%= t('select_subjects') %>:</label>
</div>
<div class="fee_category_scroll">          
    <div class="sel-list">
        <%= check_box :select_subject, :all , :class=>'check_box select_all_subjects', :onclick => "select_all_subjects(this)" %><%= t('select_all_subjects') %>
    </div>
    <% @subjects.each do |subject| %>
      <div class="each_batch">
          <%= check_box_tag "subject_ids[]" , subject.id,false, :class=>'check_box subject_check', :onclick=>'count_selected_subjects(this)' %><label for="configuration_<%= subject.name.humanize %>"><%= subject.name.humanize %></label>
      </div>
    <% end %>
</div>