<div class="label-field-pair margin-100">
    <label>
        <%= t('attendance_report') %>
    </label>
</div>
<table id="listing" class="attendance_report_summary" align="center" width="80%">    
    <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-80"><%= @config.config_value == 'Daily' ? t('total_working_days') : t('total_working_hours') %></td>
        <td class="col-20"> <%= @academic_days_count %></td>
    </tr>
    <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-80"><%= t('no_of_applicable_days') %></td>
        <td class="col-20"> <%= @student_academic_days %></td>
    </tr>
    <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-80"><%= t('total_present') %></td>
        <td class="col-20"> <%= @attendance == @attendance.to_i ? @attendance.to_i : @attendance %></td>
    </tr>
    <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-80"><%= t('percentage') %></td>
        <td class="col-20"> <%= @student_academic_days == 0 ? '-' : "#{@percent} %" %></td>
    </tr>
</table>
<br/>
<div class="label-field-pair margin-100">
    <label>
        <%= t('student_leave_details') %>
    </label>
</div>

<div id="leave_reports">
    <%= render :partial => "leave_reports" %>
</div>
