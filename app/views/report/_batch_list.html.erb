<% if @active_batches.present? or @inactive_batches.present? %>
    <div class="label-field-pair">
      <label for="select_batch"><%= t('select_batch') %></label>
    </div>
<% end %>
<div class="fee_category_scroll">
  <% if @active_batches.present? %>
      <div class="sel-list">
        <%= t('active') %>
        : <%= link_to_function "#{t('all')}", "$$('input.batches_box').each(function(checkbox) { checkbox.checked = true; });" %>
        ,
        <%= link_to_function "#{t('none')}", "$$('input.batches_box').each(function(checkbox) { checkbox.checked = false; })" %>
      </div>
      <% @active_batches.each do |batch| %>
          <div class="each_batch">
            <%= check_box_tag "batch_id[batch_ids][]", batch.id, true, :class => 'batches_box' %>
            &#x200E;<span><%= batch.full_name %></span>&#x200E;
          </div>
      <% end %>
  <% end %>
  <div class="label-field-pair"></div>
  <% if @inactive_batches.present? %>


      <div class="sel-list">
        <%= t('inactive') %>
        : <%= link_to_function "#{t('all')}", "$$('input.inactive_batches_box').each(function(checkbox) { checkbox.checked = true; });" %>
        ,
        <%= link_to_function "#{t('none')}", "$$('input.inactive_batches_box').each(function(checkbox) { checkbox.checked = false; })" %>
      </div>
      <% @inactive_batches.each do |batch| %>
          <div class="each_batch">
            <%= check_box_tag "batch_id[batch_ids][]", batch.id, true, :class => 'inactive_batches_box' %>
            &#x200E;<span><%= batch.full_name %></span>&#x200E;
          </div>
      <% end %>
  <% end %>
</div>

