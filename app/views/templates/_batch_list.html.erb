<div class="field_head">
  <%= t('select_batch')%>
</div>
<div class="field">
  <%= select "", "batches",
  @batches.map{|c| [c.name,c.id]} ,{:include_blank=>t('select_batch')}, :class=>"input_box", :id=>"batch_selector",
  :onchange => "#{remote_function(:url => {:action => "student_list"},:with => "'batch_id='+value+'&base_template_id=#{@base_template_id}&combine_template_id=#{@combine_template_id if @combine_template_id.present?}'",
  :before => "Element.show('loader')",:success => "Element.hide('loader')" )}" %>
</div>
