<div class="custom_year">
    <div class="label-field-pair"><label>
            <%= t('year') %>
        </label>
        <div class="text-input-bg">
            <%= select :year, :id,
              [["#{t('select_year')}",""],[@year-2,@year-2],[@year-1,@year-1],[@year,@year]],
              {:prompt => "#{t('year')}"},
              {:onchange => "#{remote_function(
              :url => { :action => 'report' },
              :with => "'year='+value+'&batch_id='+#{@batch.id}+'&month='+#{@month}+'&subject_id='+#{@subject}+'&mode='+'#{@mode}'",
              :before => "Element.show('loader3')",
              :success => "Element.hide('loader3')"  )}"} %>
              <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader3", :style =>"display: none;" ) %>
        </div>
    </div>
</div>
