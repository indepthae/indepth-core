<% unless @mode.present? %>
<% @mode = 'Monthly' %>
<% end %>
<div class="custom_month">
    <div class="label-field-pair"><label>
            <%= t('month') %>
        </label>
        <div class="text-input-bg">
            <%= select :month, :id,
              [["#{t('jan')}",'01'], ["#{t('feb')}",'02'], ["#{t('mar')}",'03'], ["#{t('apr')}",'04'], ["#{t('may')}",'05'], ["#{t('jun')}",'06'], ["#{t('jul')}",'07'], ["#{t('aug')}",'08'], ["#{t('sep')}",'09'], ["#{t('oct')}",'10'], ["#{t('nov')}",'11'], ["#{t('dec')}",'12']],
              {:prompt => "#{t('select_month')}"},
              {:onchange => "#{remote_function(
              :url => { :action => 'year' },
              :with => "'month='+value+'&batch_id='+#{@batch.id}+'&subject_id='+#{@subject}+'&mode='+'#{@mode}'",
              :before => "Element.show('loader2')",
              :success => "Element.hide('loader2')"  )}"} %>
             <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader2", :style =>"display: none;" ) %>
        </div>
      
    </div>
</div>
<div id="year"><%= render :partial => 'year'%></div>