<div id="grading-levels-form">
  <h4><%= @batch.full_name unless @batch.nil? %></h4>

  <% form_remote_for @subject,:url=>{:action=>'create_subject'},:before=>"$('submit_button').disable()",:complete=>"setTimeout(function(){$('submit_button').enable();},5000)" do |f| %>

    <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    <% elective_group_id = (@elective_group.nil? ? nil : @elective_group.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>
    <%= f.hidden_field :elective_group_id, :value => elective_group_id %>

    <div id="form-errors"></div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('name')}" %></div>
      <div class="input-container"> <%= f.text_field :name %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container">  <%= f.label "#{t('code')}" %></div>
      <div class="input-container"><%= f.text_field :code %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('max_weekly_class')}" %></div>
      <div class="input-container"> <%= f.text_field :max_weekly_classes %></div>
    </div>
    <% if @batch and (@batch.cwa_enabled? or @batch.gpa_enabled?) %>
      <div class="label-field-pair">
        <div class="label-container"><label>Credit Hours</label></div>
        <div class="input-container"> <%= f.text_field :credit_hours %></div>
      </div>
    <% end %>
    <div class="label-field-pair">
      <div class="label-container"><%= f.label "#{t('no_exam')}" %></div>
      <div class="input-container"><%= f.check_box :no_exams %></div>
    </div>

    <%if @batch.course.cce_enabled? and !@elective_group.present?%>
      <div class="label-field-pair">
        <div class="label-container"><label>6<sup>th</sup> subject</label></div>
        <div class="input-container"><%= f.check_box :is_sixth_subject%></div>
      </div>
      <div class="label-field-pair">
        <div class="label-container"><label>ASL subject</label></div>
        <div class="input-container"><%= f.check_box :is_asl,{:onclick=>'get_asl_mark_field(this)'} %></div>
      </div>
      <div class="label-field-pair_exp no_show" id="asl_mark">
        <div class="label-container"><label>ASL Mark</label></div>
        <div class="student_gender_value">
          <%= f.radio_button  "asl_mark", 20,:checked=>true %>
          <label class="label_for_gender margin_right_20" for="subject_asl_mark_20">20 Marks</label>
          <%= f.radio_button  "asl_mark", 10 %>
          <label class="label_for_gender" for="subject_asl_mark_10">10 Marks</label>
        </div>
      </div>
    <%end%>

    <%= f.submit  "", :value => "â–º #{t('save')}", :class => "submit_button", :id => "submit_button" %>

  <% end %>
</div>
<script type="text/javascript">

  get_asl_mark_field = function(e){
    if (j(e).prop('checked') == true){
      j('#asl_mark').removeClass('no_show');
    }
    else{
      j('#asl_mark').addClass('no_show');
    }
  }
</script>