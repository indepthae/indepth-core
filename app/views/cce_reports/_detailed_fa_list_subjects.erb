<div class="label-field-pair">
    <label for="subject_id">Subject</label>
    <div  class="text-input-bg" id="exam-group-select">
            <%= select :assessment, :subject_id, @subjects,{:prompt=> "Select a subject"},{:onChange => "#{remote_function(:url => {:action => "detailed_fa_list_fa_groups"},
            :with => "'subject_id='+ value +'&type=detailed_fa'",
            :before => "Element.show('loader1')",
            :success => "Element.hide('loader1')"
            )}"} %><%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader1",
            :style =>"display: none;" ) %>
    </div>
</div>
