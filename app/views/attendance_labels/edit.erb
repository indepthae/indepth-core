<div id="content-header">
    <%= show_header_icon %>
    <h1><%= t('attendance_status') %></h1>
    <div class='header-sep'>|</div>
    <div class='sub-header'><%= t('edit') %></div>
</div>

<div id="page-yield">
    <div class="bread_crumb">
        <%= breadcrumb :attendance_labels_edit %>
        <%= render_breadcrumbs  %>
    </div>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>


    <div class="custom_form">
        <% form_for  @attendance_label do |f| %>
          <div id="form-errors"></div>

          <div class="label-field-pair">
              <label for="reason"><%= t('status_name') %></label>
              <div class="text-input-bg"> <%= f.text_field :name %></div>
          </div>

          <div class="label-field-pair">
              <label for="reason"><%= t('label_code')  %></label>
              <div class="text-input-bg"><%= f.text_field :code %></div>
          </div>
          <%  if @attendance_label.is_default? %>
            <div class="label-field-pair">
                <label for="reason"><%= t('label_type') %></label>
                <div class="attendance_type"><%= @attendance_label.attendance_type %></div>
               <% f.hidden_field  :attendance_type %>
<%#= f.select :attendance_type, [['Select type', " " ], ['Present' ,'Present'], ['Late', 'Late'] , ['Absent', 'Absent']], :disabled => 'disabled' %>
            </div>
          <% else %>
            <div class="label-field-pair">
                <label for="reason"><%= t('label_type') %></label>
                <div class="text-input-bg"><%= f.select :attendance_type, [['Select type', " " ], ['Present' ,'Present'], ['Late', 'Late'] , ['Absent', 'Absent']]  %></div>
            </div>
          <% end %>
          <div class="notification">
              <div class="label-field-pair">
                  <div class="notification1"><%= t('sent_notification')  %></div><div class="tooltip_info2" tooltip ="<%= t('notification_tooltip') %>"></div> 
                  <div class="notification_checkbox"><%= f.check_box :has_notification %></div>
              </div>
          </div>
          <div class="custom_submit_button">
              <%= f.submit t('save'), :class => 'submit_button',:id => 'submit_button' %>
          </div>
        <% end %>
    </div>

</div>