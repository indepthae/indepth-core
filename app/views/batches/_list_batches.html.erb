<label for="student_course" id="batch_text"><%=t('batch')%></label>
<div class="text-input-bg">

  <%= select :batch, :id,
    @batches.map {|b| [b.full_name, b.id] },
    {:prompt => "#{t('select_a_batch')}"},
    {:onchange => "batch_switcher(value)"} %>
  <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader1", :style =>"display: none;" ) %>
</div>
<%= link_to t('submit'), course_batch_path(@course.id,@batch.id), :class => "submit_button", :id => "batch_switcher" %>