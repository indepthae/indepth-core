<div id="error-box">
    <ul>
        <% error_messages =[] %>
        <% if @result.is_a?(Array) %>
          <% @result.each do |msg| %>       
            <% msg.errors.full_messages.each{|ent| error_messages << ent} %>
            <%error_messages.each do |error|%>
              <li><%= error%></li>
            <%end%>
          <% end %>
        <%else%>    
          <% @result.each_pair do |key, value| %> 
            <li><%= value%></li>
          <%end%>
        <%end%>
    </ul>
</div>
